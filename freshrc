# Updates Fresh
fresh freshshell/fresh bin/fresh --bin=~/.local/bin/fresh

# Git
fresh ../.gitconfig.local --file=~/.gitconfig
fresh configs/git/gitconfig --file=~/.gitconfig
fresh configs/git/gitconfig.trilon --file=~/.gitconfig.trilon
fresh configs/git/gitcommit --file
fresh configs/git/gitignore --file

# ZSH
fresh configs/zsh/zshrc.min --file
fresh configs/zsh/zshrc --file
fresh configs/zsh/zshenv.min --file
fresh configs/zsh/zshenv --file
fresh configs/zsh/zprofile --file

# Tmux
fresh configs/tmux/tmux.conf --file

# Shell
fresh configs/shell/aliases/\*
fresh configs/shell/functions/\*

# vim
fresh configs/vim/vimrc --file=~/.vimrc
fresh configs/vim/vimrc.min --file=~/.vimrc.min

# Idea Vim
fresh configs/jetbrains/ideavimrc --file

# SSH
fresh configs/ssh/config --file ~/.ssh/config

# GPG
fresh configs/gpg/gpg.conf --file ~/.gnupg/gpg.conf
fresh configs/gpg/gpg-agent.conf --file ~/.gnupg/gpg-agent.conf
