#!/usr/bin/env zsh

# Extend min config
# -------------------------------------------------------------------------------------------------

source "${HOME}/.zshrc.min"

# Load plugins
# -------------------------------------------------------------------------------------------------

# # Improving ZSH usage
zinit light "changyuheng/fz"
zinit light "tcnksm/docker-alias"
zinit light "bonnefoa/kubectl-fzf"

# Post-plugin hook
# -------------------------------------------------------------------------------------------------

# Autoload tmux
if [ -z "$TMUX" ] && [[ $current_emulator == *"termite"* ]]; then
  tmuxinator start default
fi